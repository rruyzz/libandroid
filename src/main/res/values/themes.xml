<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ApplicationLib" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFBB86FC</item>
        <item name="colorPrimaryVariant">#FF3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF03DAC5</item>
        <item name="colorSecondaryVariant">#FF03DAC5</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ApplicationLib.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ApplicationLib.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

